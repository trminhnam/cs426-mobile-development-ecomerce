<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.SellerMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_rect01">


        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_person_white"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/nameTextView"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/userIcon"
            android:textColor="@color/white"
            tools:text="Seller Name" />

        <ImageButton
            android:id="@+id/addProductButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="8dp"
            android:layout_toStartOf="@id/editSellerProfileButton"
            android:background="@null"
            android:src="@drawable/ic_add_shopping_white" />

        <ImageButton
            android:id="@+id/editSellerProfileButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_edit_white"
            android:background="@null"
            android:layout_marginHorizontal="8dp"
            android:layout_toStartOf="@id/logoutButton"/>

        <ImageButton
            android:id="@+id/logoutButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/ic_logout_white"
            android:background="@null"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>